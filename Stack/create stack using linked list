class Node{
    int value;
    Node next;
    Node(int value){
        this.value = value;
        this.next = null;
    }
}
class Stack{
    Node top;
    Stack(){
        top = null;
    }
    void push(int value){
        Node newNode = new Node(value);
        newNode.next = top;
        top = newNode;
    }
    void pop(){
        if(isEmpty()){
            System.out.println("--->There is no value in Linked List.<---");
        }
        else{
            System.out.println("<- Popped Element is " + top.value);
            top = top.next;
        }
    }
    void peek(){
         if(isEmpty()){
            System.out.println("--->There is no value in Linked List.<---");
        } 
        else System.out.println("# Top element is " + top.value);
    }
    boolean isEmpty(){
        return top == null;
    }
    void displayNodes(){
        if(isEmpty()){
            System.out.println("--->There is no value in Linked List.<---");
        }
        else {
        Node current = top;
        while(current != null){
            System.out.print("(*)Element is " + current.value + " ");
            current = current.next;
        }
        System.out.println();
        }
    }
}
public class Main
{
	public static void main(String[] args) {
		Stack stack = new Stack();
		stack.displayNodes();
		stack.push(10);
		stack.push(20);
		stack.push(30);
		stack.push(40);
		stack.displayNodes();
		stack.peek();
		stack.pop();
		stack.displayNodes();
		stack.pop();
		stack.pop();
		stack.pop();
		stack.displayNodes();
	}
}
